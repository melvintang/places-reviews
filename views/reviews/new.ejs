<h2>Add your review of <%= place.name%></h2>
<form action="/places/<%= place.name%>/" method="POST">

  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="items" name = "review[title]" placeholder="Title">
  </div>

  <div class="form-group">
    <label for="exampleTextarea">Comments</label>
    <textarea class="form-control" id="exampleTextarea" rows="3" name = "review[comments]" ></textarea>
  </div>

  <div class="form-group">
    <label for="rating">Overall Rating (1=meh, 5=omg yes):</label>
    <select class="form-control" id="rating" name = "review[rating]">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<a href="/places">See all places</a>
<a href="/profile">Go back to your profile</a>
<a href="/logout" class="btn btn-default btn-sm">Logout</a>
