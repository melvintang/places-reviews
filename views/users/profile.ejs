<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Profile for username <%=user.local.name%></h1>

    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->


        <h3><%=user.local.name%>'s Reviews: </h3>
        <% reviews.forEach(function(review){ %>
          <h4 class="text-muted"><a href="/reviews/<%= review.id%>"><%= review.comments%></a> Rating: <%= review.rating %></h4>
        <% })%>

    </div>

</div>
</body>
</html>
