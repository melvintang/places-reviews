<div class="text-center">

<% if(message.length > 0) { %>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>

<form method="POST" action="/signup" >
  <div class="form-group">
    <label for="user">Username:    </label>
      <input type="text" id="email" name="user[local][name]" class="form-control" autofocus>
  </div>
  <div class="form-group">
    <label for="user">Email:    </label>
      <input type="text" id="email" name="user[local][email]" class="form-control" autofocus>
  </div>
  <div class="form-group">
    <label> Password: </label>
      <input type="password" id="pass" name="user[local][password]" class="form-control">
